/**index.wxss**/

page {
  height: 100%;
}

.container {
  height: 100%;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  padding: 15rpx 15rpx;
  background-color:gainsboro;
}

.chat-left {
  display: flex;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  font-size:18px;
}

.titleanditems_l{
  margin-right: 70rpx;
  margin-left: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-top:20rpx;
  padding-bottom:10rpx;
  background-color: white;
  border-radius: 15rpx;
  word-break: break-all;
}

.text_l {
  margin-bottom:15rpx;
  line-height: 170%;
  flex-wrap: wrap;
  background-color: white;
  border-radius: 15rpx;
  word-break: break-all;
}

.clickBtn {
  margin-bottom:15rpx;
  display: flex;
}

.arrow,.url{
  line-height: 160%;
  background-color: white;
  color: blue;
  font-size:18px;
}

.anotherOneBtn{
  margin-bottom: 15rpx;
  align-items: center;
  background-color: white;
  color:hotpink;
  font-size:medium;
  height:80rpx;
}

.avatar-img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
  flex-shrink: 0;
}

.chat-right {
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  font-size:18px;
}

.titleanditems_r{
  margin-bottom:0rpx;
  margin-right: 20rpx;
  margin-left: 70rpx;
  padding:15rpx;
  border-radius: 15rpx;
  word-break: break-all;
  background-color: #a0e66b;
}

.ask-input-word {
  width: 96%;
  position: fixed;
  bottom: 0rpx;
  display: flex;
  align-items: center;
}

.ask-input-word input {
  height:  90rpx;
  background: white;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
  flex: 1;
  margin-right: 10rpx;
}

.sendBtn{
  height:90rpx;
  margin-bottom: 20rpx;
}
